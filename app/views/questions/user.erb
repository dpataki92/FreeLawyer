<div class="page">

  <br>
  <div class="filter">
    <form action="/questions/user" method="post">

      <label for="jurisdiction"><strong>Jurisdiction:</strong></label>
      <input type="text" list="jurisdictions" id="jurisdiction" name="jurisdiction">

        <datalist id="jurisdictions">
            <option value="Austria"></option>
            <option value="Belgium"></option>
            <option value="Bulgaria"></option>
            <option value="Croatia"></option>
            <option value="Republic of Cyprus"></option>
            <option value="Czech Republic"></option>
            <option value="Denmark"></option>
            <option value="Estonia"></option>
            <option value="Finland"></option>
            <option value="France"></option>
            <option value="Germany"></option>
            <option value="Greece"></option>
            <option value="Hungary"></option>
            <option value="Ireland"></option>
            <option value="Italy"></option>
            <option value="Latvia"></option>
            <option value="Lithuania"></option>
            <option value="Luxembourg"></option>
            <option value="Netherlands"></option>
            <option value="Poland"></option>
            <option value="Portugal"></option>
            <option value="Romania"></option>
            <option value="Slovakia"></option>
            <option value="Slovenia"></option>
            <option value="Spain"></option>
            <option value="Sweden"></option>
        </datalist>

        <label for="area"><strong>Area:</strong></label>
        <input type="text" list="areas" id="area" name="area">

        <datalist id="areas">
            <option value="Immigration Law"></option>
            <option value="Family Law"></option>
            <option value="Labour Law"></option>
            <option value="Tax Law"></option>
            <option value="Criminal Law"></option>
        </datalist>

        <input class="submit" type="submit" value="Search">
    </form>
  </div>
  <br>

  <h4>Profile:</h4> <br>
  <%if @user_to_show_type == "client"%>
    <p class="data-type">Username</p>: <%=@user_to_show.username%><br>
    <p class="data-type">Type</p>: <%=@user_to_show_type%><br>
    <p class="data-type">Email</p>: <%=@user_to_show.email%><br>
    <p class="data-type">Questions</p>: <%=@user_to_show.questions.size%><br>
  <%elsif @user_to_show_type == "lawyer"%>
    <p class="data-type">Username</p>: <%=@user_to_show.username%><br>
    <p class="data-type">Type</p>: <%=@user_to_show_type%><br>
    <p class="data-type">Email</p>: <%=@user_to_show.email%><br>
    <p class="data-type">Expertise</p>: <%=@user_to_show.expertise.gsub(/[\[\]\"]/, "")%><br>
    <p class="data-type">Jurisdiction</p>: <%=@user_to_show.jurisdiction%><br>
    <p class="data-type">Answers</p>: <%=@user_to_show.answers.size%><br>
    <p class="data-type">Upvotes</p>: <%=@user_to_show.upvotes%><br>
  <%end%>
  <br>

  <h4><%="Questions:"%></h4><br>
  <%@questions.each do |q|%>
    <a href="/questions/<%=q.slug%>" id="title"><%=q.title%></a><br>
    <p class="data-type">Area</p>: <%=q.area%><br>
    <p class="data-type">Jurisdiction</p>: <%=q.jurisdiction%><br>
    <p class="data-type">Answers</p>: <%=q.answers.size%><br>
    <p class="data-type">Created at</p>: <%=q.created_at%><br><br>
  <%end%>
  <br>
  <br>
  <%if current_user == @user_to_show%>
  <a href="/logout" onclick="return confirm('Are you sure you want to log out?');">Log out</a><br><br>
  <a href="/delete" onclick="return confirm('Are you sure you want to delete your profile?');">Delete My Profile</a>
  <%end%>
</div>