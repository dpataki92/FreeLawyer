<div class="page">

  <br>
  <div class="filter">
    <form action="/questions/user" method="post">

      <label for="jurisdiction">Jurisdiction:</label>
      <input type="text" list="jurisdictions" id="jurisdiction" name="jurisdiction">

        <datalist id="jurisdictions">
            <option value="Austria"></option>
            <option value="Belgium"></option>
            <option value="Bulgaria"></option>
            <option value="Croatia"></option>
            <option value="Republic of Cyprus"></option>
            <option value="Czech Republic"></option>
            <option value="Denmark"></option>
            <option value="Estonia"></option>
            <option value="Finland"></option>
            <option value="France"></option>
            <option value="Germany"></option>
            <option value="Greece"></option>
            <option value="Hungary"></option>
            <option value="Ireland"></option>
            <option value="Italy"></option>
            <option value="Latvia"></option>
            <option value="Lithuania"></option>
            <option value="Luxembourg"></option>
            <option value="Netherlands"></option>
            <option value="Poland"></option>
            <option value="Portugal"></option>
            <option value="Romania"></option>
            <option value="Slovakia"></option>
            <option value="Slovenia"></option>
            <option value="Spain"></option>
            <option value="Sweden"></option>
        </datalist>

        <label for="area">Area:</label>
        <input type="text" list="areas" id="area" name="area">

        <datalist id="areas">
            <option value="Immigration Law"></option>
            <option value="Family Law"></option>
            <option value="Labour Law"></option>
            <option value="Tax Law"></option>
            <option value="Criminal Law"></option>
        </datalist>

        <input type="submit" value="Filter">
    </form>
  </div>
  <br>

  <h4>Profile:</h4> <br>
  <%if @user_to_show_type == "client"%>
    Username: <%=@user_to_show.username%><br>
    Type: <%=@user_to_show_type%><br>
    Email: <%=@user_to_show.email%><br>
    Questions: <%=@user_to_show.questions.size%><br>
  <%elsif @user_to_show_type == "lawyer"%>
    Username: <%=@user_to_show.username%><br>
    Type: <%=@user_to_show_type%><br>
    Email: <%=@user_to_show.email%><br>
    Expertise: <%=@user_to_show.expertise.gsub(/[\[\]\"]/, "")%><br>
    Jurisdiction: <%=@user_to_show.jurisdiction%><br>
    Answers: <%=@user_to_show.answers.size%><br>
    Upvotes: <%=@user_to_show.upvotes%><br>
  <%end%>
  <br>

  <h4><%="Questions:"%></h4><br>
  <%@questions.each do |q|%>
    <a href="/questions/<%=q.slug%>"><%=q.title%></a><br>
    Area: <%=q.area%><br>
    Jurisdiction: <%=q.jurisdiction%><br>
    Answers: <%=q.answers.size%><br>
    Created at: <%=q.created_at%><br><br>
  <%end%>
</div>