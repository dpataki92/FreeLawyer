<h4>Title:</h4> <br>
<%=@question.title%> <br> <br>
<h4>Description:</h4> <br>
<%=@question.description%> <br> <br>
Created at: <%=@question.created_at%> <br>
Legal area: <%=@question.area%> <br>
Jurisdiction: <%=@question.jurisdiction%> <br>
<%if @question.updated_at =! @question.created_at%>
Question was edited at: <%=@question.updated_at%>
<%end%><br><br>

<%if @user_type == "client" && @question.client == @current_user%>
<form action="/questions/<%=@question.slug%>/edit" method="get">
<input type="submit" value="Edit Your Question">
</form>

<form action="/questions/<%=@question.slug%>" method="post">
<input type="hidden" id="hidden" name="_method" value="delete">
<input type="submit" value="Delete Your Question">
</form>
<%end%>

<br><br>
<h4>Answers:</h4> <br>
<%@answers.each_with_index do |a, i|%>
<%="#{i+1}. answer from #{a.lawyer.username}"%> <br><br>
Content: <br>
<%=a.content%> <br><br>
Upvotes: <%=a.upvotes%><br><br>

<%if @user_type == "client"%>
<form action="/questions/<%=@question.slug%>/answers/<%=a.id%>" method="post">
<input type="submit" name="upvote" value="Upvote">
</form>
<%end%>

<%if @user_type == "lawyer" && @current_user == a.lawyer%>
<form action="/questions/<%=@question.slug%>/answers/<%=a.id%>" method="post">
<input type="hidden" id="hidden" name="_method" value="delete">
<input type="submit" value="Delete Your Answer">
</form>
<%end%>
<%end%>

